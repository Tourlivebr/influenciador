---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StarRating from '../components/StarRating.astro';

const passeio = {
  titulo: "Alpen Park",
  subtitulo: "Ingresso",
  categoria: "INGRESSOS E ATRAÇÕES",
  preco: 32.00,
  avaliacao: 4.75,
  totalAvaliacoes: 8,
  parcelas: "A partir de:",
  descricao: "Vai passar o dia no Alpen Park? Nós te ajudamos a otimizar sua programação. O parque abre às 9h e em alta temporada (meses de janeiro, julho e dezembro) é nesse horário que te recomendamos chegar para evitar filas.",
  inclusos: [
    "Ingresso para o parque",
    "Acesso às áreas comuns",
    "Trenó (velocidade controlada pelo aventureiro)",
    "Montanha-russa Fogo do Dragão",
    "Arvorismo + tirolesas"
  ],
  naoInclusos: [
    "Arena Big Land (fliperamas e videogames gigantes)",
    "Alpen Motion (cinema 4D)",
    "Alpen Interactive (jogo interativo temático)",
    "Alpen Car (carrinhos de bate-bate)",
    "Alpen Kids (castelo para crianças)",
    "Quadriciclo (requer CNH e altura mínima de 1,50m)",
    "Alimentação"
  ],
  duracao: "4 horas",
  horarios: ["09:00", "10:00", "11:00"],
  galeria: [
    "/images/Alpenpark/Alpenpark01.JPG",
    "/images/Alpenpark/Alpenpark02.JPG",
    "/images/Alpenpark/Alpenpark03.jpg",
    "/images/Alpenpark/Alpenpark04.JPG",
    "/images/Alpenpark/Alpenpark05.JPG",
    "/images/Alpenpark/Alpenpark06.jpg",
    "/images/Alpenpark/Alpenpark07.jpg",
    "/images/Alpenpark/Alpenpark08.jpg",
    "/images/Alpenpark/Alpenpark09.jpg",
    "/images/Alpenpark/Alpenpark10.jpg"
  ],
  tags: ["Montanha-russa Fogo do Dragão", "Trenó com velocidade de 40km/h", "Arvorismo e tirolesas"]
};

const whatsappMessage = `Olá! Gostaria de mais informações sobre o ${passeio.titulo} - ${passeio.subtitulo}. Valor: R$ ${passeio.preco.toFixed(2).replace('.', ',')} em ${passeio.parcelas}.`;
const whatsappUrl = `https://wa.me/5554993723094?text=${encodeURIComponent(whatsappMessage)}`;
---

<BaseLayout 
  title={`${passeio.titulo} - ${passeio.subtitulo} | Gramado Diferente`}
  description={passeio.descricao}
>
  <Header />
  
  <main class="pt-20 lg:pt-24">
    <!-- Hero Section -->
    <section class="relative h-96 lg:h-[500px] overflow-hidden" style={`background-image: url('${passeio.galeria[0]}'); background-attachment: fixed; background-size: cover; background-position: center; background-repeat: no-repeat;`}>
      <div class="absolute inset-0 bg-black/40"></div>
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="text-center text-white px-4">
          <span class="inline-block bg-primary-600 text-white px-3 py-1 rounded-full text-sm font-medium mb-4">
            {passeio.categoria}
          </span>
          <h1 class="text-4xl lg:text-6xl font-bold mb-4">{passeio.titulo}</h1>
          <p class="text-xl lg:text-2xl opacity-90">{passeio.subtitulo}</p>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-4 py-12">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Conteúdo Principal -->
        <div class="lg:col-span-2">
          <!-- Avaliações e Preço -->
          <div class="flex flex-wrap items-center justify-between mb-8 p-6 bg-gray-50 rounded-xl">
            <div class="flex flex-col mb-4 lg:mb-0">
              <p class="text-gray-700 font-medium mb-1"><strong>Nossos Clientes Recomendam:</strong></p>
              <div class="flex items-center space-x-4">
                <StarRating rating={passeio.avaliacao} />
                <span class="text-gray-600">({passeio.totalAvaliacoes} avaliações)</span>
              </div>
            </div>
            <div class="text-right">
              <div class="text-gray-600 text-sm mb-1">{passeio.parcelas}</div>
              <div class="text-3xl font-bold text-primary-600">R$ {passeio.preco.toFixed(2).replace('.', ',')}</div>
            </div>
          </div>

          <!-- Descrição -->
          <div class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Sobre esta atração</h2>
            <p class="text-gray-700 leading-relaxed">{passeio.descricao}</p>
            
            <div class="mt-6 space-y-6">
              <div>
                <h3 class="text-xl font-semibold mb-3">Arena Big Land</h3>
                <p class="text-gray-700 leading-relaxed">Uma atração nostálgica com 5 fliperamas e 2 videogames dos anos 80 e 90 em formato gigante.</p>
                <p class="text-gray-700 leading-relaxed mt-2">Compre o bilhete individual diretamente na bilheteria do parque.</p>
              </div>
              
              <div>
                <h3 class="text-xl font-semibold mb-3">Trenó</h3>
                <p class="text-gray-700 leading-relaxed">Percorrendo os trilhos em meio à natureza, numa velocidade que pode chegar a 40km/h, totalmente controlada pelo aventureiro, o trenó proporciona momentos memoráveis de adrenalina e diversão.</p>
                <p class="text-gray-700 font-medium mt-2">COMPRAR AGORA</p>
              </div>
              
              <div>
                <h3 class="text-xl font-semibold mb-3">Fogo do Dragão</h3>
                <p class="text-gray-700 leading-relaxed">A Montanha-russa do Alpen Park atinge uma velocidade média de 55km/h e possibilita adrenalina, diversão e uma vista incrível!</p>
                <p class="text-gray-700 font-medium mt-2">COMPRAR AGORA</p>
              </div>
              
              <div>
                <h3 class="text-xl font-semibold mb-3">Alpen Motion</h3>
                <p class="text-gray-700 leading-relaxed">O cinema 4D é para quem gosta de mergulhar no universo das 4 dimensões. Sempre com um desenho animado em cartaz, a sala de cinema proporcionará interatividade com emoção à flor da pele.</p>
                <p class="text-gray-700 leading-relaxed mt-2">Compre o bilhete individual diretamente na bilheteria do parque.</p>
              </div>
              
              <div>
                <h3 class="text-xl font-semibold mb-3">Alpen Interactive</h3>
                <p class="text-gray-700 leading-relaxed">Um jogo interativo, temático e em grandes proporções onde os aventureiros entram em uma competição. Um ranking com as melhores performances é mostrado na tela e o vencedor é identificado com a estrela de xerife.</p>
                <p class="text-gray-700 leading-relaxed mt-2">Compre o bilhete individual diretamente na bilheteria do parque.</p>
              </div>
              
              <div>
                <h3 class="text-xl font-semibold mb-3">Alpen Car</h3>
                <p class="text-gray-700 leading-relaxed">A nostalgia toma conta no carrinho de bate-bate. Adultos e crianças testam suas habilidades ao volante de nossos carros que são movidos a bateria.</p>
                <p class="text-gray-700 leading-relaxed mt-2">Compre o bilhete individual diretamente na bilheteria do parque.</p>
              </div>
              
              <div>
                <h3 class="text-xl font-semibold mb-3">Alpen Kids</h3>
                <p class="text-gray-700 leading-relaxed">O Castelo Kids do Alpen Park é para as crianças entre 0,80m e 1,29m. Um ambiente totalmente lúdico que transporta para o universo das brincadeiras através de piscina de bolinha, escorregadores, casinhas temáticas, entre outros.</p>
                <p class="text-gray-700 leading-relaxed mt-2">Compre o bilhete individual diretamente na bilheteria do parque.</p>
              </div>
              
              <div>
                <h3 class="text-xl font-semibold mb-3">Arvorismo + tirolesas</h3>
                <p class="text-gray-700 leading-relaxed">Supere seus limites neste desafio nas copas das árvores e duas tirolesas. Aproveite o contato com a natureza de forma segura e emocionante. Com cem metros de comprimento, oito passarelas e duas tirolesas a aventura proporcionada pela atividade de arvorismo é desafiadora.</p>
                <p class="text-gray-700 font-medium mt-2">COMPRAR AGORA</p>
              </div>
              
              <div>
                <h3 class="text-xl font-semibold mb-3">Quadriciclo</h3>
                <p class="text-gray-700 leading-relaxed">Sobre quatro rodas, você percorrerá uma trilha em meio à natureza. Uma aventura off-road perfeita para fazer em família. Para pilotar é necessário CNH, e altura mínima de 1,50m.</p>
                <p class="text-gray-700 leading-relaxed mt-2">Compre diretamente na bilheteria do parque mediante disponibilidade de agendamento.</p>
              </div>
            </div>
          </div>

          <!-- O que está incluso -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">O que está incluso</h3>
            <ul class="space-y-2">
              {passeio.inclusos.map(item => (
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- O que NÃO está incluso -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">O que NÃO está incluso</h3>
            <ul class="space-y-2">
              {passeio.naoInclusos.map(item => (
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Tags -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">Destaques</h3>
            <div class="flex flex-wrap gap-2">
              {passeio.tags.map(tag => (
                <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-medium">
                  {tag}
                </span>
              ))}
            </div>
          </div>

          <!-- Galeria de Imagens -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">Galeria de Imagens</h3>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              {passeio.galeria.map((imagem, index) => (
                <div class="aspect-square overflow-hidden rounded-lg cursor-pointer hover:opacity-80 transition-opacity" onclick={`openModal(${index})`}>
                  <img 
                    src={imagem} 
                    alt={`${passeio.titulo} - Imagem ${index + 1}`}
                    class="w-full h-full object-cover"
                  />
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar de Reserva -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-xl shadow-lg p-6 sticky top-24">
            <div class="text-center mb-6">
              <div class="text-gray-500 text-sm mb-1">A partir de:</div>
              <div class="text-3xl font-bold text-primary-600">R$ {passeio.preco.toFixed(2).replace('.', ',')}</div>
            </div>
            
            <div class="space-y-4 mb-6">
              <div class="flex justify-between items-center py-2 border-b">
                <span class="text-gray-600">Duração:</span>
                <span class="font-medium">{passeio.duracao}</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b">
                <span class="text-gray-600">Horários:</span>
                <span class="font-medium">{passeio.horarios.join(", ")}</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b">
                <span class="text-gray-600">Categoria:</span>
                <span class="font-medium text-sm">{passeio.categoria}</span>
              </div>
            </div>
            
            <!-- Botão de Compra pelo Site Oficial -->
            <a 
              href="https://loja.alpenpark.com.br/?ac=9UYAQ47THE"
              target="_blank"
              class="w-full bg-primary-600 hover:bg-primary-700 text-white font-bold py-4 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2 mb-4"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              <span class="text-center">Compre com DESCONTO<br>pelo Site Oficial</span>
            </a>
            
            <a 
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2 mb-4"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              <span>Reservar via WhatsApp</span>
            </a>
            
            <p class="text-center text-gray-500 text-sm">
              <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Resposta rápida garantida!
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<!-- Modal para Galeria -->
<div id="imageModal" class="fixed inset-0 bg-black bg-opacity-75 z-50 hidden flex items-center justify-center p-4">
  <div class="relative max-w-4xl max-h-full">
    <button 
      onclick="closeModal()" 
      class="absolute top-4 right-4 text-white hover:text-gray-300 z-10"
    >
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    <img id="modalImage" src="" alt="" class="max-w-full max-h-full object-contain" />
  </div>
</div>

<script>
  const galeria = [
    "/images/Alpenpark/Alpenpark01.JPG",
    "/images/Alpenpark/Alpenpark02.JPG",
    "/images/Alpenpark/Alpenpark03.jpg",
    "/images/Alpenpark/Alpenpark04.JPG",
    "/images/Alpenpark/Alpenpark05.JPG",
    "/images/Alpenpark/Alpenpark06.jpg",
    "/images/Alpenpark/Alpenpark07.jpg",
    "/images/Alpenpark/Alpenpark08.jpg",
    "/images/Alpenpark/Alpenpark09.jpg",
    "/images/Alpenpark/Alpenpark10.jpg"
  ];
  
  function openModal(index) {
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    modalImage.src = galeria[index];
    modalImage.alt = `Alpen Park - Imagem ${index + 1}`;
    modal.classList.remove('hidden');
  }
  
  function closeModal() {
    const modal = document.getElementById('imageModal');
    modal.classList.add('hidden');
  }
  
  // Fechar modal ao clicar fora da imagem
  document.getElementById('imageModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeModal();
    }
  });
</script>
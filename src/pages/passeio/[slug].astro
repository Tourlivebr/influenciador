---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import StarRating from '../../components/StarRating.astro';

// Função necessária para modo estático
export async function getStaticPaths() {
  return [
    { params: { slug: 'tour-o-quatrilho' } },
    { params: { slug: 'tour-trem-vinho' } }
  ];
}

// Dados dos passeios
const passeiosData = {
  'tour-o-quatrilho': {
    id: 1,
    titulo: "Tour O Quatrilho",
    subtitulo: "Passeio Rural Com Almoço Típico",
    categoria: "PASSEIOS",
    preco: 28.17,
    avaliacao: 4.81,
    totalAvaliacoes: 36,
    parcelas: "A partir de:",
    descricao: "Embarque em uma jornada única pela história e cultura da região colonial. O Tour O Quatrilho oferece uma experiência autêntica com almoço típico preparado com receitas tradicionais das famílias locais, visitação aos cenários do famoso filme 'O Quatrilho' e um passeio encantador pelas vilas históricas que preservam a essência da imigração italiana.",
    inclusos: [
      "Transporte ida e volta",
      "Almoço típico completo",
      "Guia especializado",
      "Visitação aos pontos históricos",
      "Degustação de produtos locais"
    ],
    duracao: "8 horas",
    horarios: ["08:00", "14:00"],
    galeria: [
      "/images/cristais_de_gramado_o_inquestionavel.jpg",
      "/images/gramado_selfie_.webp",
      "/images/terra-magica-florybal.webp"
    ],
    tags: ["Almoço típico com receitas locais", "História do filme 'O Quatrilho'", "Tour por vilas históricas"]
  },
  'tour-trem-vinho': {
    id: 2,
    titulo: "Tour Trem e Vinho",
    subtitulo: "Com Trem Maria Fumaça e Épopeia",
    categoria: "PASSEIOS",
    preco: 61.50,
    avaliacao: 4.93,
    totalAvaliacoes: 218,
    parcelas: "A partir de:",
    descricao: "Uma experiência única que combina a nostalgia do Trem Maria Fumaça com a magia dos vinhedos locais. Desfrute de uma viagem inesquecível pelo Parque Epopéia, com degustação de vinhos artesanais, apresentações culturais e paisagens deslumbrantes da Serra Gaúcha.",
    inclusos: [
      "Passagem no Trem Maria Fumaça",
      "Entrada no Parque Epopéia",
      "Degustação de vinhos e sucos",
      "Apresentações culturais",
      "Guia especializado"
    ],
    duracao: "6 horas",
    horarios: ["09:00", "15:00"],
    galeria: [
      "/images/grupo-dreams-passaporte.jpg",
      "/images/cristais_de_gramado_o_inquestionavel.jpg",
      "/images/terra-magica-florybal.webp",
      "/images/gramado_selfie_.webp"
    ],
    tags: ["Caminhada pelo Parque Epopéia", "Degustação de vinhos e sucos", "Apresentações culturais"]
  }
};

const { slug } = Astro.params;
const passeio = passeiosData[slug];

if (!passeio) {
  return Astro.redirect('/404');
}

const whatsappMessage = `Olá! Gostaria de mais informações sobre o ${passeio.titulo} - ${passeio.subtitulo}. Valor: R$ ${passeio.preco.toFixed(2).replace('.', ',')} em ${passeio.parcelas}.`;
const whatsappUrl = `https://wa.me/5554993723094?text=${encodeURIComponent(whatsappMessage)}`;
---

<BaseLayout 
  title={`${passeio.titulo} - ${passeio.subtitulo} | Motorista Gramado Diferente`}
  description={passeio.descricao}
>
  <Header />
  
  <main class="pt-20 lg:pt-24">
    <!-- Hero Section -->
    <section class="relative h-96 lg:h-[500px] overflow-hidden">
      <img 
        src={passeio.galeria[0]} 
        alt={passeio.titulo}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/40"></div>
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="text-center text-white px-4">
          <span class="inline-block px-3 py-1 bg-primary-600 text-white text-sm font-medium rounded-full mb-4">
            {passeio.categoria}
          </span>
          <h1 class="text-4xl lg:text-6xl font-bold mb-4">{passeio.titulo}</h1>
          <p class="text-xl lg:text-2xl text-gray-200">{passeio.subtitulo}</p>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-4 py-12">
      <div class="grid lg:grid-cols-3 gap-12">
        <div class="lg:col-span-2">
          <!-- Avaliações e Preço -->
          <div class="flex flex-wrap items-center justify-between mb-8 p-6 bg-gray-50 rounded-xl">
            <div class="flex items-center space-x-4 mb-4 lg:mb-0">
              <div class="flex flex-col">
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-1"><strong>Nossos Clientes Recomendam:</strong></p>
                <div class="flex items-center">
                  <StarRating rating={passeio.avaliacao} />
                  <span class="text-gray-600 ml-2">({passeio.totalAvaliacoes} avaliações)</span>
                </div>
              </div>
            </div>
            <div class="text-right">
              <div class="text-gray-600 text-sm mb-1">{passeio.parcelas}</div>
              <div class="text-3xl font-bold text-primary-600">R$ {passeio.preco.toFixed(2).replace('.', ',')}</div>
            </div>
          </div>

          <!-- Descrição -->
          <div class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Sobre este passeio</h2>
            <p class="text-gray-700 leading-relaxed">{passeio.descricao}</p>
          </div>

          <!-- O que está incluso -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">O que está incluso</h3>
            <ul class="space-y-2">
              {passeio.inclusos.map(item => (
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Tags -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">Destaques</h3>
            <div class="flex flex-wrap gap-2">
              {passeio.tags.map(tag => (
                <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          </div>

          <!-- Galeria de Imagens -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">Galeria</h3>
            <div class="grid grid-cols-2 lg:grid-cols-3 gap-4">
              {passeio.galeria.map((imagem, index) => (
                <div class="aspect-square overflow-hidden rounded-lg cursor-pointer hover:opacity-80 transition-opacity">
                  <img 
                    src={imagem} 
                    alt={`${passeio.titulo} - Imagem ${index + 1}`}
                    class="w-full h-full object-cover"
                    onclick={`openModal('${imagem}')`}
                  />
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar de Reserva -->
        <div class="lg:col-span-1">
          <div class="sticky top-32">
            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-lg">
              <div class="text-center mb-6">
                <div class="text-gray-600 text-sm mb-1">{passeio.parcelas}</div>
                <div class="text-3xl font-bold text-primary-600 mb-2">
                  R$ {passeio.preco.toFixed(2).replace('.', ',')}
                </div>
              </div>

              <!-- Informações do Passeio -->
              <div class="space-y-4 mb-6">
                <div class="flex justify-between">
                  <span class="text-gray-600">Duração:</span>
                  <span class="font-medium">{passeio.duracao}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Horários:</span>
                  <span class="font-medium">{passeio.horarios.join(', ')}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Categoria:</span>
                  <span class="font-medium">{passeio.categoria}</span>
                </div>
              </div>

              <!-- Botão de Reserva via WhatsApp -->
              <a 
                href={whatsappUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                </svg>
                <span>Reservar via WhatsApp</span>
              </a>

              <div class="text-center mt-4">
                <p class="text-sm text-gray-600">Resposta rápida garantida!</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Modal para Galeria -->
  <div id="imageModal" class="fixed inset-0 bg-black/80 z-50 hidden items-center justify-center p-4">
    <div class="relative max-w-4xl max-h-full">
      <button 
        onclick="closeModal()"
        class="absolute -top-10 right-0 text-white hover:text-gray-300 text-2xl"
      >
        ✕
      </button>
      <img id="modalImage" src="" alt="" class="max-w-full max-h-full object-contain rounded-lg" />
    </div>
  </div>

  <Footer />
</BaseLayout>

<script>
  function openModal(imageSrc) {
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    modalImage.src = imageSrc;
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  }

  function closeModal() {
    const modal = document.getElementById('imageModal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
  }

  // Fechar modal ao clicar fora da imagem
  document.getElementById('imageModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeModal();
    }
  });
</script>
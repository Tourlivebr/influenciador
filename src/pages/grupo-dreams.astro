---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StarRating from '../components/StarRating.astro';

const passeio = {
  titulo: "Passaporte Grupo Dreams",
  subtitulo: "O melhor negócio da Serra Gaúcha!",
  categoria: "INGRESSOS E ATRAÇÕES",
  preco: 250.00,
  avaliacao: 4.01,
  totalAvaliacoes: 10,
  parcelas: "10x sem juros",
  descricao: "O Passaporte Dreams garante experiências incríveis e emocionantes para todas as idades, nas duas cidades mais visitadas da Serra Gaúcha — Gramado e Canela. Com ele, você garante acesso a 7 atrações imperdíveis com um super desconto e ainda pode parcelar em até 10x no cartão. Passaporte exclusivo com passeio na carona de um Porsche Cayman (mediante agendamento diretamente na bilheteria do Super Carros).",
  inclusos: [
    "Acesso a 7 atrações do grupo",
    "Passaporte com validade de 1 ano",
    "Passeio na carona de um Porsche Cayman",
    "Acesso a cenários temáticos únicos",
    "Experiências interativas e imersivas"
  ],
  duracao: "1 hora por atração",
  horarios: ["Diariamente - horários variados"],
  galeria: [
    "/images/dreams/thumb_loja_passaporte.png",
    "/images/dreams/dreamland-museu-de-cera-gramado-rs-1.jpg",
    "/images/dreams/hollywood.png",
    "/images/dreams/super_Carros.png",
    "/images/dreams/motor_show.png",
    "/images/dreams/jardim_amor.png",
    "/images/dreams/SELFIE.png",
    "/images/dreams/vale_dinossauros.png"
  ],
  tags: ["7 atrações imperdíveis", "Validade de 1 ano", "Passeio de Porsche Cayman incluso"]
};

const atracoes = [
  {
    nome: "Dreamland Museu de Cera Gramado",
    descricao: "Primeiro museu de cera da América Latina, com mais de 100 personagens e personalidades mundiais, distribuídos em mais de 1.000 m² de cenários temáticos que recriam grandes sucessos do cinema, da música e lugares apaixonantes. Conta com loja de souvenirs.",
    instagram: "@dreamlandgramado",
    endereco: "Av. das Hortênsias, 5507 - Ipê Amarelo, Gramado – RS"
  },
  {
    nome: "Dreams Motor Show Gramado",
    descricao: "Coleção de motos clássicas e modernas, abrangendo quase um século de história, em um ambiente temático com bar estilo Las Vegas e loja de souvenirs.",
    instagram: "@motorshowgramado",
    endereco: "Av. das Hortênsias, 5507 - Subsolo, Gramado – RS"
  },
  {
    nome: "Hollywood Dream Cars – Museu do Automóvel",
    descricao: "Carros raros das décadas de ouro do cinema americano, incluindo a maior coleção de Cadillacs da América Latina. Conta com loja de souvenirs.",
    instagram: "@hollywooddreamcars",
    endereco: "Av. das Hortênsias, R. Vigilante, 4151, Gramado – RS"
  },
  {
    nome: "Jardim do Amor",
    descricao: "Cenários românticos e fotogênicos perfeitos para registrar momentos especiais.",
    instagram: "@jardimdoamorgramado",
    endereco: "Av. das Hortênsias, 765 - Centro, Gramado – RS"
  },
  {
    nome: "Super Carros – Salão + Passeio na Carona de um Porsche Cayman",
    descricao: "Dois andares e 2.400 m² dedicados ao mundo automotor, com mais de 30 supermáquinas, games, simuladores e loja. Inclui o passeio na carona de um Porsche Cayman (agendamento obrigatório diretamente na bilheteria).",
    instagram: "@supercarros",
    endereco: "Av. das Hortênsias, 4635 - Estrada Gramado, Gramado – RS"
  },
  {
    nome: "Vale dos Dinossauros Canela",
    descricao: "Um retorno ao período jurássico, com dinossauros animatrônicos que se movimentam e emitem sons. Conta com loja de souvenirs e lanchonete.",
    instagram: "@valedinocanela",
    endereco: "RS 466 - Bosque Sinoserra, Canela – RS"
  }
];

const informacoesImportantes = [
  "Validade: 1 ano após a compra",
  "Funcionamento: Todas as atrações abertas diariamente",
  "Isenção: Crianças até 3 anos e 11 meses não pagam (ingresso de isenção emitido nas bilheterias)",
  "Transporte: Não incluso",
  "Tempo médio de visita: 1 hora por atração",
  "Apresentação do ingresso: Necessário apresentar o QR Code no dispositivo móvel (evite impressão em papel)",
  "Imagens ilustrativas: Alguns personagens de cera podem não estar expostos por manutenção ou participação em ações externas"
];

const naoInclusos = [
  "American Old Trucks (Museu do Caminhão)",
  "VOA Gramado",
  "Drives dos carros (Super Carros)",
  "Simuladores de direção (Super Carros)",
  "Fotos produzidas pela equipe interna",
  "Produtos das lojas",
  "Produtos do bar"
];

const whatsappMessage = `Olá! Gostaria de mais informações sobre o ${passeio.titulo} - ${passeio.subtitulo}. Valor: R$ ${passeio.preco.toFixed(2).replace('.', ',')} em ${passeio.parcelas}.`;
const whatsappUrl = `https://wa.me/5554993723094?text=${encodeURIComponent(whatsappMessage)}`;
---

<BaseLayout 
  title={`${passeio.titulo} - ${passeio.subtitulo} | Motorista Gramado Diferente`}
  description={passeio.descricao}
>
  <Header />
  
  <main class="pt-20 lg:pt-24">
    <!-- Hero Section -->
    <section class="relative h-96 lg:h-[500px] overflow-hidden" style={`background-image: url('${passeio.galeria[0]}'); background-attachment: fixed; background-size: cover; background-position: center; background-repeat: no-repeat;`}>
      <div class="absolute inset-0 bg-black/40"></div>
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="text-center text-white px-4">
          <span class="inline-block px-3 py-1 bg-primary-600 text-white text-sm font-medium rounded-full mb-4">
            {passeio.categoria}
          </span>
          <h1 class="text-4xl lg:text-6xl font-bold mb-4">{passeio.titulo}</h1>
          <p class="text-xl lg:text-2xl text-gray-200">{passeio.subtitulo}</p>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-4 py-12">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Conteúdo Principal -->
        <div class="lg:col-span-2">
          <!-- Avaliações e Preço -->
          <div class="flex flex-wrap items-center justify-between mb-8 p-6 bg-gray-50 rounded-xl">
            <div class="flex items-center space-x-4 mb-4 lg:mb-0">
              <div class="flex flex-col">
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-1"><strong>Nossos Clientes Recomendam:</strong></p>
                <div class="flex items-center">
                  <StarRating rating={passeio.avaliacao} />
                  <span class="text-gray-600 ml-2">({passeio.totalAvaliacoes} avaliações)</span>
                </div>
              </div>
            </div>
            <div class="text-right">
              <div class="text-gray-600 text-sm mb-1">A partir de:</div>
              <div class="text-3xl font-bold text-primary-600">R$ {passeio.preco.toFixed(2).replace('.', ',')}</div>
            </div>
          </div>

          <!-- Descrição -->
          <div class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Sobre este passaporte</h2>
            <p class="text-gray-700 leading-relaxed">{passeio.descricao}</p>
          </div>

          <!-- Atrações Incluídas -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-6">Atrações Incluídas</h3>
            <div class="space-y-6">
              {atracoes.map((atracao, index) => (
                <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
                  <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0">
                      <span class="inline-flex items-center justify-center w-8 h-8 bg-primary-600 text-white text-sm font-bold rounded-full">
                        {index + 1}
                      </span>
                    </div>
                    <div class="flex-1">
                      <h4 class="text-lg font-semibold text-gray-900 mb-2">{atracao.nome}</h4>
                      <p class="text-gray-700 mb-3">{atracao.descricao}</p>
                      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4 space-y-2 sm:space-y-0 text-sm text-gray-600">
                        <div class="flex items-center space-x-2">
                          <svg class="w-4 h-4 text-pink-500" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12.017 11.814c2.287 0 4.14-1.853 4.14-4.14 0-2.287-1.853-4.14-4.14-4.14zm0-6.28c1.178 0 2.14.962 2.14 2.14 0 1.178-.962 2.14-2.14 2.14-1.178 0-2.14-.962-2.14-2.14 0-1.178.962-2.14 2.14-2.14z"/>
                            <path d="M12.017 13.814c-2.287 0-4.14 1.853-4.14 4.14v4.14h8.28v-4.14c0-2.287-1.853-4.14-4.14-4.14z"/>
                          </svg>
                          <span>{atracao.instagram}</span>
                        </div>
                        <div class="flex items-center space-x-2">
                          <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                          </svg>
                          <span>{atracao.endereco}</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- O que está incluso -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">O que está incluso</h3>
            <ul class="space-y-2">
              {passeio.inclusos.map(item => (
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Informações Importantes -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">Informações Importantes</h3>
            <ul class="space-y-2">
              {informacoesImportantes.map(info => (
                <li class="flex items-start space-x-3">
                  <svg class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-700">{info}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Não Incluído -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">Não Incluído no Passaporte (compra à parte)</h3>
            <ul class="space-y-2">
              {naoInclusos.map(item => (
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Tags -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">Destaques</h3>
            <div class="flex flex-wrap gap-2">
              {passeio.tags.map(tag => (
                <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          </div>

          <!-- Galeria de Imagens -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">Galeria</h3>
            <div class="grid grid-cols-2 lg:grid-cols-3 gap-4">
              {passeio.galeria.map((imagem, index) => (
                <div class="aspect-square overflow-hidden rounded-lg cursor-pointer hover:opacity-80 transition-opacity">
                  <img 
                    src={imagem} 
                    alt={`${passeio.titulo} - Imagem ${index + 1}`}
                    class="w-full h-full object-cover"
                    onclick={`openModal('${imagem}')`}
                  />
                </div>
              ))}
            </div>
          </div>

          <!-- Aviso Legal -->
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-yellow-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
              </svg>
              <p class="text-sm text-yellow-800">
                <strong>Importante:</strong> As imagens de divulgação são meramente ilustrativas. Alguns personagens de cera podem não estar em exibição no momento, pois podem estar em manutenção ou participando de ações promocionais em outros locais.
              </p>
            </div>
          </div>
        </div>

        <!-- Sidebar de Reserva -->
        <div class="lg:col-span-1">
          <div class="sticky top-32">
            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-lg">
              <div class="text-center mb-6">
                <div class="text-3xl font-bold text-primary-600 mb-2">
                  R$ {passeio.preco.toFixed(2).replace('.', ',')}
                </div>
                <div class="text-gray-600">ou em {passeio.parcelas}</div>
              </div>

              <!-- Informações do Passeio -->
              <div class="space-y-4 mb-6">
                <div class="flex justify-between">
                  <span class="text-gray-600">Duração:</span>
                  <span class="font-medium">{passeio.duracao}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Horários:</span>
                  <span class="font-medium">{passeio.horarios.join(', ')}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Categoria:</span>
                  <span class="font-medium">{passeio.categoria}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Validade:</span>
                  <span class="font-medium">1 ano</span>
                </div>
              </div>

              <!-- Botão de Compra pelo Site Oficial -->
              <a 
                href="https://grupodreams.com.br/loja/gramado/?ingToken=passaportedreams&bookingagency=26206"
                target="_blank"
                class="w-full bg-primary-600 hover:bg-primary-700 text-white font-bold py-4 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2 mb-4"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span class="text-center">Compre com DESCONTO<br>pelo Site Oficial</span>
              </a>

              <!-- Botão de Compra -->
              <a 
                href={whatsappUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                </svg>
                <span>Reservar via WhatsApp</span>
              </a>

              <div class="text-center mt-4">
                <p class="text-sm text-gray-600">Resposta rápida garantida!</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Modal para Galeria -->
  <div id="imageModal" class="fixed inset-0 bg-black/80 z-50 hidden items-center justify-center p-4">
    <div class="relative max-w-4xl max-h-full">
      <button 
        onclick="closeModal()"
        class="absolute -top-10 right-0 text-white hover:text-gray-300 text-2xl"
      >
        ✕
      </button>
      <img id="modalImage" src="" alt="" class="max-w-full max-h-full object-contain rounded-lg" />
    </div>
  </div>

  <Footer />
</BaseLayout>

<script>
  function openModal(imageSrc) {
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    modalImage.src = imageSrc;
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  }

  function closeModal() {
    const modal = document.getElementById('imageModal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
  }

  // Fechar modal ao clicar fora da imagem
  document.getElementById('imageModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeModal();
    }
  });
</script>
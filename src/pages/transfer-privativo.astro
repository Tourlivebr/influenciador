---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StarRating from '../components/StarRating.astro';

const passeio = {
  titulo: "Transfer Ida e Volta (POA ou Caxias/ Gramado ou Canela)",
  subtitulo: "Transporte Privativo",
  categoria: "RECEPTIVO",
  preco: 280.00,
  avaliacao: 4.95,
  totalAvaliacoes: 127,
  parcelas: "A partir de:",
  descricao: "Aproveite seu tempo com a comodidade do transporte privativo! Aprecie as lindas paisagens e colha ótimas dicas com o nosso motorista/guia sobre as programações e atrações da Serra Gaúcha. Sem espera no embarque/desembarque, com embarque imediato e desembarque na hora do seu voo. Privacidade total - só você e suas companhias no veículo.",
  inclusos: [
    "Transfer do Aeroporto de Porto Alegre ou Caxias do Sul para Gramado ou Canela",
    "Transfer de Gramado ou Canela para Aeroporto de Porto Alegre ou de Caxias do Sul",
    "Motorista/guia experiente",
    "Veículo privativo e confortável",
    "Dicas sobre atrações da Serra Gaúcha"
  ],
  naoInclusos: [
    "Refeições",
    "Bebidas",
    "Hospedagem"
  ],
  duracao: "Aproximadamente 2 horas cada trecho",
  horarios: ["Conforme horário do voo"],
  galeria: [
    "/images/Transfer/Transfer.jpg",
    "/images/Transfer/Transfer.jpg",
    "/images/Transfer/Transfer.jpg",
    "/images/Transfer/Transfer.jpg"
  ],
  tags: ["Sem espera no embarque/desembarque", "Embarque imediato", "Privacidade total"]
};

const whatsappMessage = `Olá! Gostaria de mais informações sobre o ${passeio.titulo} - ${passeio.subtitulo}. Valor: R$ ${passeio.preco.toFixed(2).replace('.', ',')} em ${passeio.parcelas}.`;
const whatsappUrl = `https://wa.me/5554993723094?text=${encodeURIComponent(whatsappMessage)}`;
---

<BaseLayout 
  title={`${passeio.titulo} - ${passeio.subtitulo} | Motorista Gramado Diferente`}
  description={passeio.descricao}
>
  <Header />
  
  <main class="pt-20 lg:pt-24">
    <!-- Hero Section -->
    <section class="relative h-96 lg:h-[500px] overflow-hidden" style={`background-image: url('${passeio.galeria[0]}'); background-attachment: fixed; background-size: cover; background-position: center; background-repeat: no-repeat;`}>
      <div class="absolute inset-0 bg-black/40"></div>
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="text-center text-white px-4">
          <span class="inline-block px-3 py-1 bg-primary-600 text-white text-sm font-medium rounded-full mb-4">
            {passeio.categoria}
          </span>
          <h1 class="text-4xl lg:text-6xl font-bold mb-4">{passeio.titulo}</h1>
          <p class="text-xl lg:text-2xl text-gray-200">{passeio.subtitulo}</p>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-4 py-12">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Conteúdo Principal -->
        <div class="lg:col-span-2">
          <!-- Avaliações e Preço -->
          <div class="flex flex-wrap items-center justify-between mb-8 p-6 bg-gray-50 rounded-xl">
            <div class="flex items-center space-x-4 mb-4 lg:mb-0">
              <div class="flex flex-col">
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-1"><strong>Nossos Clientes Recomendam:</strong></p>
                <div class="flex items-center">
                  <StarRating rating={passeio.avaliacao} />
                  <span class="text-gray-600 ml-2">({passeio.totalAvaliacoes} avaliações)</span>
                </div>
              </div>
            </div>
            <div class="text-right">
              <div class="text-gray-600 text-sm mb-1">{passeio.parcelas}</div>
              <div class="text-3xl font-bold text-primary-600">R$ {passeio.preco.toFixed(2).replace('.', ',')}</div>
            </div>
          </div>

          <!-- Descrição -->
          <div class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Sobre esta atividade</h2>
            <p class="text-gray-700 leading-relaxed mb-6">{passeio.descricao}</p>
            
            <div class="grid md:grid-cols-2 gap-6 mb-6">
              <div class="bg-blue-50 p-4 rounded-lg">
                <h4 class="font-bold text-blue-800 mb-2">✔ Transfer IN (Aeroporto → Gramado/Canela)</h4>
                <ul class="text-sm text-blue-700 space-y-1">
                  <li>• Motorista aguarda com placa identificada</li>
                  <li>• Saída imediata após desembarque</li>
                  <li>• Duração: aproximadamente 2h</li>
                  <li>• Deixamos no hotel/pousada informado</li>
                </ul>
              </div>
              
              <div class="bg-green-50 p-4 rounded-lg">
                <h4 class="font-bold text-green-800 mb-2">✔ Transfer OUT (Gramado/Canela → Aeroporto)</h4>
                <ul class="text-sm text-green-700 space-y-1">
                  <li>• Saída 4h a 5h antes do check-in aéreo</li>
                  <li>• Duração: aproximadamente 2h</li>
                  <li>• Busca no hotel/pousada</li>
                  <li>• Chegada pontual ao aeroporto</li>
                </ul>
              </div>
            </div>
          </div>

          <!-- O que está incluso -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">O que está incluso</h3>
            <ul class="space-y-2">
              {passeio.inclusos.map(item => (
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- O que NÃO está incluso -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">O que NÃO está incluso</h3>
            <ul class="space-y-2">
              {passeio.naoInclusos.map(item => (
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Tags -->
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-4">Destaques</h3>
            <div class="flex flex-wrap gap-2">
              {passeio.tags.map(tag => (
                <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm">{tag}</span>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Card de Reserva -->
          <div class="bg-white border border-gray-200 rounded-xl p-6 sticky top-24">
            <div class="text-center mb-6">
              <div class="text-3xl font-bold text-primary-600 mb-2">
                R$ {passeio.preco.toFixed(2).replace('.', ',')}
              </div>
              <div class="text-gray-600">por veículo (até 4 passageiros)</div>
            </div>
            
            <div class="space-y-4 mb-6">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Duração:</span>
                <span class="font-medium">{passeio.duracao}</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Disponibilidade:</span>
                <span class="font-medium">Todos os dias</span>
              </div>
            </div>
            
            <a 
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center space-x-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              <span>Reservar via WhatsApp</span>
            </a>
            
            <div class="mt-4 text-center">
              <div class="flex flex-col items-center">
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-1"><strong>Nossos Clientes Recomendam:</strong></p>
                <div class="flex items-center justify-center space-x-1 text-yellow-400 mb-1">
                  <StarRating rating={passeio.avaliacao} />
                </div>
                <div class="text-sm text-gray-600">
                  {passeio.avaliacao} de 5 ({passeio.totalAvaliacoes} avaliações)
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>